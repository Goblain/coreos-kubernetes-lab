[Unit]
Description=Kubernetes API server
After=apiserver.service
After=kubelet.service

[Service]
ExecStartPre = -/usr/bin/docker pull gcr.io/google_containers/hyperkube:v{{version}}
ExecStartPre = -/usr/bin/docker stop proxy
ExecStartPre = -/usr/bin/docker rm -f proxy
ExecStart    = /usr/bin/docker run --name proxy --net host --pid host --privileged -v /sys:/sys:ro gcr.io/google_containers/hyperkube:v{{version}} /hyperkube proxy --iptables-sync-period 5s --hostname-override %H --master http://172.17.8.11:8080 --proxy-mode iptables
TimeoutStartSec = 300
Restart      = always
RestartSec   = 5

[Install]
WantedBy = multi-user.target

[X-Fleet]
Global    = true
